<StyledLayerDescriptor xmlns="http://www.opengis.net/sld"
	xmlns:ogc="http://www.opengis.net/ogc"
	xmlns:xlink="http://www.w3.org/1999/xlink"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.opengis.net/sld http://schemas.opengis.net/sld/1.0.0/StyledLayerDescriptor.xsd"
	version="1.0.0">
	<UserLayer>
		<Name>SpatialScan</Name>
		<LayerFeatureConstraints>
			<FeatureTypeConstraint />
		</LayerFeatureConstraints>
		<UserStyle>
			<Name>spatial-scan</Name>
			<Title>Spatial Scan</Title>
			<Abstract>A style for symbolizing a spatial scan.</Abstract>
			<FeatureTypeStyle>
				<FeatureTypeName>SpatialScanOverlay</FeatureTypeName>
				<Rule>
					<RasterSymbolizer>
						<Opacity>0.6</Opacity>
						<ColorMap type="ramp" extended="true">
							<ColorMapEntry color="#00ff00" quantity="0.0" opacity="1.0" />
							<ColorMapEntry color="#ffffcc" quantity="10.0" />
							<ColorMapEntry color="#ffeda0" quantity="20.0" />
							<ColorMapEntry color="#fed976" quantity="40.0" />
							<ColorMapEntry color="#feb24c" quantity="60.0" />
							<ColorMapEntry color="#fd8d3c" quantity="80.0" />
							<ColorMapEntry color="#fc4e2a" quantity="90.0" />
							<ColorMapEntry color="#e31a1c" quantity="95.0" />
							<ColorMapEntry color="#b10026" quantity="100.0" />
						</ColorMap>
						<OverlapBehavior>
							<AVERAGE/>
   						</OverlapBehavior>
						
					</RasterSymbolizer>
				</Rule>
			</FeatureTypeStyle>
		</UserStyle>
	</UserLayer>
</StyledLayerDescriptor>

